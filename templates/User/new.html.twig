{% extends 'base_test.html.twig' %}

{% block body %}
    {{ parent() }}
	<div class="main container">
		<div class="row well">
			<div class="col-md-6">
				<div class="page-header">
					<h2>{% trans %}Crear Usuario{% endtrans %}</h2>     
            
				</div>
                {{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
                
               <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Usuario'} }) }}
                    <span class="text-danger">{{ form_errors(form.username) }}</span>
              </div>
                <div class="form-group">
			        {{ form_label(form.password) }}
			        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Password'}}) }}
			        <span class="text-danger">{{ form_errors(form.password) }}</span>
			    </div>
            <div class="form-group">
			        {{ form_label(form.persona.rut) }}
			        {{ form_widget(form.persona.rut, {'attr': {'class': 'form-control', 'placeholder' : 'Rut'}}) }}
			        <span class="text-danger">{{ form_errors(form.persona.rut) }}</span>
			    </div>
           <div class="form-group">
			        {{ form_label(form.persona.name) }}
			        {{ form_widget(form.persona.name, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre'}}) }}
			        <span class="text-danger">{{ form_errors(form.persona.name) }}</span>
			    </div>
            <div class="form-group">
			        {{ form_label(form.persona.lastName) }}
			        {{ form_widget(form.persona.lastName, {'attr': {'class': 'form-control', 'placeholder' : 'Apellido'}}) }}
			        <span class="text-danger">{{ form_errors(form.persona.lastName) }}</span>
			    </div>
			   <div class="form-group">
			        {{ form_label(form.persona.gender) }}
			        {{ form_widget(form.persona.gender, {'attr': {'class': 'form-control', 'placeholder' : 'Apellido'}}) }}
			        <span class="text-danger">{{ form_errors(form.persona.gender) }}</span>
			    </div>
			    <div class="form-group">
			        {{ form_label(form.persona.mail) }}
			        {{ form_widget(form.persona.mail, {'attr': {'class': 'form-control', 'placeholder' : 'Email'}}) }}
			        <span class="text-danger">{{ form_errors(form.persona.mail) }}</span>
			    </div>
           <div class="form-group">
			        {{ form_label(form.persona.phone) }}
			        {{ form_widget(form.persona.phone, {'attr': {'class': 'form-control', 'placeholder' : 'Telefono'}}) }}
			        <span class="text-danger">{{ form_errors(form.persona.phone) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.roles) }}
			        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.roles) }}</span>
			    </div>
                  <div class="form-group">
			        {{ form_label(form.sucursal) }}
			        {{ form_widget(form.sucursal, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.sucursal) }}</span>
			    </div>
      
          <div class="form-group">
			        {{ form_label(form.status) }}
			        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.status) }}</span>
			    </div>
     
			</fieldset>
        
		    <p>
		        {{ form_widget(form.save, {'label' : 'Guardar', 'attr': {'class': 'btn btn-success'}}) }}

		    </p>                
        
              {{ form_end(form) }}

             <ul>
                  <li>
                    <a href="{{ path('mantenedor_user_index') }}">Volver a Lista</a>
                </li>
        </ul>


			</div>
		</div>
	</div>
{% endblock %}