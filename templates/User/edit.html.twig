 {%   extends 'Main/base_test.html.twig'    %}  


{% block body %}
	<div class="box box-primary">
            <div class="box-header with-border">
              <h3>Editar Usuario:   {{ user.persona.fullName}} </h3>   
			  <div style="text-align: right">
    					<a href="{{ path('mantenedor_user_index') }}" class="btn btn-success">Volver a Lista</a>
        			</div>
              </div>

		<div class="box-body">
    			
    				
    		<br>
				
			
                {{ form_start(edit_form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
                <div class="form-row align-items-center">
					<legend>Datos Personales</legend>
					<div class="col-lg-6">
				<div class="form-group">
			        {{ form_label(edit_form.status) }}
			        {{ form_widget(edit_form.status, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.status) }}</span>
			    </div>
               <div class="form-group">
                    {{ form_label(edit_form.username) }}
                    {{ form_widget(edit_form.username, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Usuario'} }) }}
                    <span class="text-danger">{{ form_errors(edit_form.username) }}</span>
              </div>
              </div>
			  <div class="col-lg-6">
                <div class="form-group">
			        {{ form_label(edit_form.password) }}
			        {{ form_widget(edit_form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Password'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.password) }}</span>
			    </div>
            <div class="form-group">
			        {{ form_label(edit_form.persona.rut) }}
			        {{ form_widget(edit_form.persona.rut, {'attr': {'class': 'form-control', 'placeholder' : 'Rut'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.persona.rut) }}</span>
			    </div>
			    </div>
           
					<div class="col-lg-6">
           <div class="form-group">
			        {{ form_label(edit_form.persona.name) }}
			        {{ form_widget(edit_form.persona.name, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.persona.name) }}</span>
			    </div>
            <div class="form-group">
			        {{ form_label(edit_form.persona.lastName) }}
			        {{ form_widget(edit_form.persona.lastName, {'attr': {'class': 'form-control', 'placeholder' : 'Apellido'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.persona.lastName) }}</span>
			    </div>
			   <div class="form-group">
			        {{ form_label(edit_form.persona.gender) }}
			        {{ form_widget(edit_form.persona.gender, {'attr': {'class': 'form-control', 'placeholder' : 'Sexo'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.persona.gender) }}</span>
			    </div>
			    </div>
				<div class="col-lg-6">
			    <div class="form-group">
			        {{ form_label(edit_form.persona.mail) }}
			        {{ form_widget(edit_form.persona.mail, {'attr': {'class': 'form-control', 'placeholder' : 'Email'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.persona.mail) }}</span>
			    </div>
           <div class="form-group">
			        {{ form_label(edit_form.persona.phone) }}
			        {{ form_widget(edit_form.persona.phone, {'attr': {'class': 'form-control', 'placeholder' : 'Telefono'}}) }}
			        <span class="text-danger">{{ form_errors(edit_form.persona.phone) }}</span>
			   
					</div>
				</div>
				<div class="form-row align-items-center">
					<legend>Datos de Rol</legend>
					<div class="col-lg-6">
						<div class="form-group">
						{% for rol in edit_form.roles %}
	                 
                         {{ form_row(rol,{'attr': {'class': 'form-control', 'placeholder' : 'rol'}}) }}
				  
        			        <span class="text-danger">{{ form_errors(edit_form.roles) }}</span>
        					 {% endfor %}
			    </div>
                
					</div>
				
				</div>
				<div class="col-md-12">
					<div class="row">
						<div class="col-md-4">
    			
						</div>
						<div class="col-md-4">
						</div>	
						<div class="col-md-4">
							<div style="text-align: right">
				<input type="submit" class="btn btn-success " value="Guardar" id="guardarx1" onclick='buswa()'>
                			</div>
						</div>			
					</div>
		                    
        		</div>      
        
              {{ form_end(edit_form) }}  


		</div>
	</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
	$(function() {

	});


    function buswa(){

		// alert(" click guardar");

		$('[name=appbundle_user]').submit();  

	}

</script>

{% endblock %}